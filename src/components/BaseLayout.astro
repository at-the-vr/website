---
import "@/styles/globals.css";

import Navigation from "./Navigation.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const {
  title: _title,
  description,
  image = `${Astro.url.origin}/og.svg`,
} = Astro.props;

const title = `${_title} | Atharva Types`;
const canonical = Astro.url.href;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="favicon.svg" type="image/svg" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="atharvatypes.vercel.app" />
    <meta property="twitter:url" content={canonical} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="mx-auto bg-slate-950 font-display text-white selection:bg-primary selection:text-white 2xl:max-w-7xl"
  >
    <Navigation />
    <slot />
  </body>
</html>
